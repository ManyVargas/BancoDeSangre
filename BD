CREATE PROCEDURE [dbo].[sp_ListarEnfermedadesPorHistorial]
    @HistorialID INT
AS
BEGIN
    SET NOCOUNT ON;

    SELECT 
        he.HistorialID,
        he.EnfermedadID,
        ce.NombreEnfermedad,
        ce.Descripcion
    FROM Historial_Enfermedades he
    INNER JOIN CatalogoEnfermedades ce ON he.EnfermedadID = ce.EnfermedadID
    WHERE he.HistorialID = @HistorialID
    ORDER BY ce.NombreEnfermedad;
END
GO
