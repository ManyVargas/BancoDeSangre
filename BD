-- =============================================
-- Procedimiento para crear una nueva prueba de laboratorio
-- =============================================
CREATE PROCEDURE [dbo].[sp_RegistrarPruebaLaboratorio]
(
    @DonanteID INT,
    @TipoPrueba NVARCHAR(100),
    @FechaPrueba DATE,
    @Laboratorio NVARCHAR(100) = NULL,
    @ValidezHasta DATE = NULL,
    @Observaciones NVARCHAR(500) = NULL,
    @ResultadoID INT
)
AS
BEGIN
    SET NOCOUNT ON;

    INSERT INTO PruebasLaboratorio (DonanteID, TipoPrueba, FechaPrueba, Laboratorio, ValidezHasta, Observaciones, ResultadoID)
    VALUES (@DonanteID, @TipoPrueba, @FechaPrueba, @Laboratorio, @ValidezHasta, @Observaciones, @ResultadoID);

 SELECT CAST(SCOPE_IDENTITY() AS INT) AS NuevaPruebaID;
 END
GO
