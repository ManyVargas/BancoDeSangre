CREATE PROCEDURE [dbo].[sp_ListarNotificacionesPorDonante]
    @DonanteID INT
AS
BEGIN
    SET NOCOUNT ON;

    IF NOT EXISTS (SELECT 1 FROM Donantes WHERE DonanteID = @DonanteID)
    BEGIN
        RAISERROR('El donante especificado no existe.', 16, 1);
        RETURN;
    END

    SELECT 
        n.NotificacionID,
        d.Nombre AS NombreDonante,       
        n.SolicitudID,
        n.Mensaje,
        n.FechaEnvio,
        n.Leida
    FROM dbo.Notificaciones n
    INNER JOIN Donantes d ON n.DonanteID = d.DonanteID
    WHERE n.DonanteID = @DonanteID
    ORDER BY n.FechaEnvio DESC;
END
GO
/****** Object:  StoredProcedure [dbo].[sp_ListarNotificacionPorID]    Script Date: 30/9/2025 4:27:17 p. m. ******/
SET ANSI_NULLS ON
GO
SET QUOTED_IDENTIFIER ON
GO


