-- =============================================
-- Procedimiento para obtener una prueba por ID
-- =============================================
CREATE PROCEDURE [dbo].[sp_ListarPruebaPorId]
(
    @PruebaID INT
)
AS
BEGIN
    SET NOCOUNT ON;

    SELECT 
        pl.PruebaID,
        pl.DonanteID,
        d.Nombre AS NombreDonante,
        pl.TipoPrueba,
        pl.FechaPrueba,
        pl.Laboratorio,
        pl.ValidezHasta,
        pl.Observaciones,
        rp.Nombre AS ResultadoPrueba
    FROM PruebasLaboratorio pl
    INNER JOIN Donantes d ON pl.DonanteID = d.DonanteID
    INNER JOIN ResultadosPrueba rp ON pl.ResultadoID = rp.ResultadoID
    WHERE pl.PruebaID = @PruebaID;
END
GO
