-- =============================================
-- Procedimiento para listar pruebas por donante
-- =============================================
CREATE PROCEDURE [dbo].[sp_ListarPruebasPorDonante]
(
    @DonanteID INT
)
AS
BEGIN
    SET NOCOUNT ON;

    SELECT 
        pl.PruebaID,
        d.Nombre AS NombreDonante,
        pl.TipoPrueba,
        pl.FechaPrueba,
        pl.Laboratorio,
        pl.ValidezHasta,
        pl.Observaciones,
        rp.Nombre AS ResultadoPrueba
    FROM PruebasLaboratorio pl
    INNER JOIN Donantes d ON pl.DonanteID = d.DonanteID
    INNER JOIN ResultadosPrueba rp ON pl.ResultadoID = rp.ResultadoID
    WHERE pl.DonanteID = @DonanteID
    ORDER BY pl.FechaPrueba DESC;
END
GO
