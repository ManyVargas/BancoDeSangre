SET ANSI_NULLS ON
GO
SET QUOTED_IDENTIFIER ON
GO

-- =============================================
-- Procedimiento para listar pruebas por rango de fechas
-- =============================================
CREATE PROCEDURE [dbo].[sp_ListarPruebasPorRangoFechas]
(
    @FechaInicio DATE,
    @FechaFin DATE
)
AS
BEGIN
    SET NOCOUNT ON;

    SELECT 
        pl.PruebaID,
        pl.DonanteID,
        d.Nombre AS NombreDonante,
        pl.TipoPrueba,
        pl.FechaPrueba,
        pl.Laboratorio,
        pl.ValidezHasta,
        pl.Observaciones,
        rp.Nombre AS ResultadoPrueba
    FROM PruebasLaboratorio pl
    INNER JOIN Donantes d ON pl.DonanteID = d.DonanteID
    INNER JOIN ResultadosPrueba rp ON pl.ResultadoID = rp.ResultadoID
    WHERE pl.FechaPrueba BETWEEN @FechaInicio AND @FechaFin
    ORDER BY pl.FechaPrueba DESC;
END
GO
