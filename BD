CREATE PROCEDURE [dbo].[sp_EliminarEnfermedad]
    @EnfermedadID INT
AS
BEGIN
    SET NOCOUNT ON;

    -- Validar que el EnfermedadID exista
    IF NOT EXISTS (SELECT 1 FROM CatalogoEnfermedades WHERE EnfermedadID = @EnfermedadID)
    BEGIN
        RAISERROR('La enfermedad con el ID especificado no existe.', 16, 1);
        RETURN;
    END

    DELETE FROM CatalogoEnfermedades
    WHERE EnfermedadID = @EnfermedadID;

    -- Devolver el número de filas afectadas
    SELECT @@ROWCOUNT AS FilasAfectadas;
END
GO
/****** Object:  StoredProcedure [dbo].[sp_EliminarHospital]    Script Date: 30/9/2025 4:27:17 p. m. ******/
SET ANSI_NULLS ON
GO
SET QUOTED_IDENTIFIER ON
GO
-- =============================================
-- Procedimiento para eliminar un hospital
-- =============================================
CREATE PROCEDURE [dbo].[sp_EliminarHospital]
(
    @HospitalID INT
)
AS
BEGIN
    SET NOCOUNT ON;

    -- Verificar si el hospital existe antes de intentar eliminarlo
    IF NOT EXISTS (SELECT 1 FROM Hospitales WHERE HospitalID = @HospitalID)
    BEGIN
        -- Si no existe, retornar 0 para indicar que no se eliminó nada
        SELECT 0 AS FilasAfectadas;
        RETURN;
    END

    -- Eliminar el hospital
    DELETE FROM Hospitales
    WHERE HospitalID = @HospitalID;

    -- Retornar el número de filas afectadas
    SELECT @@ROWCOUNT AS FilasAfectadas;
END
GO
