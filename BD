-- =============================================
-- Procedimiento para listar pruebas por tipo de prueba
-- =============================================
CREATE PROCEDURE [dbo].[sp_ListarPruebasPorTipo]
(
    @TipoPrueba NVARCHAR(100)
)
AS
BEGIN
    SET NOCOUNT ON;

    SELECT 
        pl.PruebaID,
        pl.DonanteID,
        d.Nombre AS NombreDonante,
        pl.TipoPrueba,
        pl.FechaPrueba,
        pl.Laboratorio,
        pl.ValidezHasta,
        pl.Observaciones,
        pl.ResultadoID,
        rp.Nombre AS ResultadoPrueba
    FROM PruebasLaboratorio pl
    INNER JOIN Donantes d ON pl.DonanteID = d.DonanteID
    INNER JOIN ResultadosPrueba rp ON pl.ResultadoID = rp.ResultadoID
    WHERE pl.TipoPrueba = @TipoPrueba
    ORDER BY pl.FechaPrueba DESC;
END
GO
