-- =============================================
-- Procedimiento para obtener paciente por ID
-- =============================================
CREATE PROCEDURE [dbo].[sp_ListarPacientePorId]
(
    @PacienteID INT
)
AS
BEGIN
    SET NOCOUNT ON;

    SELECT 
        p.PacienteID,
        p.Nombre,
        p.CedulaID,
        p.FechaNacimiento,
        p.Telefono,
        p.Email,
        p.Direccion,
        ts.Tipo AS TipoSangre
    FROM Pacientes p
    INNER JOIN TiposSangre ts ON p.TipoSangreID = ts.TipoSangreID
    WHERE p.PacienteID = @PacienteID;
END
