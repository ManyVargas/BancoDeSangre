CREATE PROCEDURE [dbo].[sp_MarcarNotificacionLeida]
    @NotificacionID INT,
    @Leido BIT
AS
BEGIN
    SET NOCOUNT ON;

    UPDATE dbo.Notificaciones
    SET Leida = @Leido
    WHERE NotificacionID = @NotificacionID;

    SELECT @@ROWCOUNT AS FilasAfectadas;
END

