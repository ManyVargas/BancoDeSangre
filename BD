CREATE PROCEDURE [dbo].[sp_RegistrarEnfermedad]
    @NombreEnfermedad NVARCHAR(255),
    @Descripcion NVARCHAR(MAX)
AS
BEGIN
    SET NOCOUNT ON;

    INSERT INTO CatalogoEnfermedades (NombreEnfermedad, Descripcion)
    VALUES (@NombreEnfermedad, @Descripcion);

    SELECT SCOPE_IDENTITY() AS EnfermedadID; 
END
GO
/****** Object:  StoredProcedure [dbo].[sp_RegistrarHistorialEnfermedad]    Script Date: 30/9/2025 4:27:17 p. m. ******/
SET ANSI_NULLS ON
GO
SET QUOTED_IDENTIFIER ON
GO

CREATE PROCEDURE [dbo].[sp_RegistrarHistorialEnfermedad]
    @HistorialID INT,  
    @EnfermedadID INT
AS
BEGIN
    SET NOCOUNT ON;

    IF NOT EXISTS (SELECT 1 FROM CatalogoEnfermedades WHERE EnfermedadID = @EnfermedadID)
    BEGIN
        RAISERROR('La enfermedad especificada no existe.', 16, 1);
        RETURN;
    END

    INSERT INTO Historial_Enfermedades (HistorialID, EnfermedadID)
    VALUES (@HistorialID, @EnfermedadID);
END

GO
